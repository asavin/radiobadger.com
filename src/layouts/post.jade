extends main

block content

  main.base
    div.post-container
      div.date-bubble
        | #{document.date}
      h4.title
        | #{document.name}
      div!= document.output
      if document.enclosure
        div.audio
          h4.title
            | Play episode
          audio(controls="controls")
            | Your browser does not support the audio element.
            source(src=document.enclosure type="audio/mp3")
